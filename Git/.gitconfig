#C:\Users\Cam\.gitconfig

[user]
	name = Cam
	email = EMAIL
[core]
	autocrlf = true
	excludesfile = ~/.gitignore_global
	whitespace = fix,space-before-tab,tab-in-indent,trailing-space
[push]
	default = simple
[credential]
	helper = manager


[diff]
	tool = tortoisemerge # controls which tool is used by git-difftool cli
[difftool]
	prompt = false
[difftool "tortoisemerge"]
	cmd = 'C:/Program Files/TortoiseSVN/bin/TortoiseMerge.exe' \"$LOCAL\" \"$REMOTE\"
[difftool "sourcetree"] # difftool that SourceTree uses
	cmd = 'C:/Program Files/TortoiseSVN/bin/TortoiseMerge.exe' \"$LOCAL\" \"$REMOTE\"


[merge]
	log = true
	tool = tortoisemerge # controls which tool is used by git-mergetool cli
[mergetool]
	prompt = false
[mergetool "tortoisemerge"]
	cmd = 'C:/Program Files/TortoiseSVN/bin/TortoiseMerge.exe'  -base:\"$BASE\" -mine:\"$LOCAL\" -theirs:\"$REMOTE\" -merged:\"$MERGED\"
	trustexitcode = true
[mergetool "sourcetree"] # mergetool that SourceTree uses
	cmd = 'C:/Program Files/TortoiseSVN/bin/TortoiseMerge.exe'  -base:\"$BASE\" -mine:\"$LOCAL\" -theirs:\"$REMOTE\" -merged:\"$MERGED\"
	trustexitcode = true


[alias]
	br = branch
	ci = commit
	co = checkout
	df = diff
	g = grep -I
	lg = log -p
	pp = !"echo 'Pull'; git pull; echo 'Push'; git push"
	rb = rbranch
	rv = review
	st = status


[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
	upstream = cyan
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
